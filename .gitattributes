# Auto detect text files and perform LF normalization
* text=auto

# Force these files to be CRLF and eol=crlf
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force these files to be LF and eol=lf
*.sh text eol=lf
*.py text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Binary files should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.dmg binary
*.pkg binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.pyc binary
*.pyo binary
*.pyd binary
*.pyz binary
*.pyw binary
*.pyc.orig binary

# Exclude these files from export-ignore
/.github export-ignore
/.gitattributes export-ignore
/.gitignore export-ignore
/.pre-commit-config.yaml export-ignore
/CHANGELOG.md export-ignore
/CONTRIBUTING.md export-ignore
/CODE_OF_CONDUCT.md export-ignore
/requirements-dev.txt export-ignore
/tests export-ignore
/.pytest_cache export-ignore
/.coverage export-ignore
/htmlcov export-ignore
/.mypy_cache export-ignore
/.vscode export-ignore
/.idea export-ignore
